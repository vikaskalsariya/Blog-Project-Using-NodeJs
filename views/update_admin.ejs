
<%- include("header") %>
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                           
                            
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Basic Form</strong> Elements
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/UpdateAdminData" method="post" enctype="multipart/form-data" class="form-horizontal">
                                            <input type="hidden" name="id"  value="<%= oldData._id %>" >
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Enter Name</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" name="name"  value="<%= oldData.name %>"  class="form-control">
                                                </div>
                                            </div>
                                           
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="email-input" class=" form-control-label">Enter Email</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="email" id="email-input" name="email"  value="<%= oldData.email %>"  class="form-control">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">Select Gender</label>
                                                </div>
                                                <div class="col col-md-9">
                                                    <div class="form-check-inline form-check">
                                                        <label for="inline-radio1" class="form-check-label "> 
                                                            <input type="radio" id="inline-radio1" name="gender" <% if(oldData.gender == 'male'){ %>checked <% } %> value="male" class="form-check-input">Male
                                                        </label>
                                                        <label for="inline-radio2" class="form-check-label ">
                                                            <input type="radio" id="inline-radio2" name="gender" <% if(oldData.gender == 'female'){ %>checked <% } %> value="female" class="form-check-input">Female
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">Select</label>
                                                </div>
                                                <div class="col col-md-9">
                                                    <div class="form-check-inline form-check">
                                                        <label for="inline-checkbox1" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox1" name="hobby" <% if(oldData.hobby.includes('Reading')){ %>checked <% } %> value="Reading" class="form-check-input">Reading
                                                        </label>
                                                        <label for="inline-checkbox2" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox2" name="hobby" <% if(oldData.hobby.includes('Coding')){ %>checked <% } %> value="Coding" class="form-check-input">Coding
                                                        </label>
                                                        <label for="inline-checkbox3" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox3" name="hobby"  <% if(oldData.hobby.includes('Gaming')){ %>checked <% } %> value="Gaming" class="form-check-input">Gaming
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <% var cityarr = ["Surat","Ahemdabad","Rajkot","Vadodara"]%>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="selectSm" class=" form-control-label">Select City</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="city" id="SelectLm" class="form-control-sm form-control">
                                                        <option value="0">select city</option>
                                                        <% cityarr.map((v)=>{ %>
                                                            <option value="<%= v %>" <% if(oldData.city == v){ %>selected <% } %>><%= v %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Type Message</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="message" id="textarea-input" rows="3" class="form-control"><%= oldData.message %></textarea>
                                                </div>
                                            </div>
                                           
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-input" class=" form-control-label">File input</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-input" name="AdminImage" class="form-control-file">
                                                    <img src="/<%= oldData.admin_image %>"  width="100px" alt="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="fa fa-dot-circle-o"></i> Submit
                                            </button>
                                            <button type="reset" class="btn btn-danger btn-sm">
                                                <i class="fa fa-ban"></i> Reset
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <%- include("footer") %>