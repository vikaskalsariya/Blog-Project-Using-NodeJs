
<%- include("header") %>
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                           
                            
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>subcategorie upsate Form</strong> Elements
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/subcategorie/UpdateSubCatData" method="post" enctype="multipart/form-data" class="form-horizontal">

                                            <input type="hidden" name="id"  value="<%= oldData._id %>" >
                                            <input type="hidden" name="categorieId"  value="<%= oldData.categorieId.id %>" >

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="selectSm" class=" form-control-label">Select Categorie</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="categorie" id="SelectLm" class="form-control-sm form-control">
                                                        <option>select Categorie</option>
                                                        <% for(var v of catData){ %>
                                                            <option value="<%= v.id %>" <% if(oldData.categorieId.categorie == v.categorie){ %>selected <% } %>><%= v.categorie %></option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Enter Name</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" name="title"  value="<%= oldData.title %>"  class="form-control">
                                                </div>
                                            </div>
                                           
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Type Message</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="description" id="textarea-input" rows="3" class="form-control"><%= oldData.description %></textarea>
                                                </div>
                                            </div>
                                           
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-input" class=" form-control-label">File input</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-input" name="subcategorieImage" class="form-control-file">
                                                    <img src="<%= oldData.subcaregorie_image %>"  width="100px" alt="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="fa fa-dot-circle-o"></i> Submit
                                            </button>
                                            <button type="reset" class="btn btn-danger btn-sm">
                                                <i class="fa fa-ban"></i> Reset
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <%- include("footer") %>